<div class="card card-body">
  <h1>Add A Blog Post</h1>
  <form action="/blogs" method="post">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" id="title" name="title" aria-describedby="title"
        placeholder="Enter The Title" value="{{ title }}" >
      <small id="title" class="form-text text-muted">Give Your Blog a cool Title.</small>
    </div>
    <div class="form-group">
      <label for="details">Details</label>
      <textarea name="details" value="{{ details }}" class="form-control" id="details"
        placeholder="Enter The details for your post to understand better" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Add Post</button>
  </form>
</div>


{{#each errors}}
  <div class="alert alert-danger mt-3">
    {{ text }}
  </div>
{{/each}}